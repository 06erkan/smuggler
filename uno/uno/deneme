#include <Wire.h>

int16_t ax, ay, az;

void setup() {
  Wire.begin(8);  // I2C adresi 8
  Wire.onReceive(receiveEvent);  // Veri alÄ±ndÄ±ÄŸÄ±nda Ã§alÄ±ÅŸacak fonksiyon
  Serial.begin(9600);
}

void loop() {
  delay(100);
}

// Master (Uno) veri gÃ¶nderdiÄŸinde Ã§alÄ±ÅŸacak fonksiyon
void receiveEvent(int bytes) {
  Wire.readBytes((char*)&ax, sizeof(ax));
  Wire.readBytes((char*)&ay, sizeof(ay));
  Wire.readBytes((char*)&az, sizeof(az));

  Serial.print("Nano -> AX: "); Serial.print(ax);
  Serial.print(", AY: "); Serial.print(ay);
  Serial.print(", AZ: "); Serial.println(az);
}
